# ----------------------------------------------------------------------------
# Scheduling Configuration
# ----------------------------------------------------------------------------
# Interval-based scheduling (in seconds)
POLL_INTERVAL_SECONDS=60

# Cron-based scheduling (overrides interval if set)
# Examples:
#   0 2 * * *     - Daily at 2:00 AM
#   */30 * * * *  - Every 30 minutes
#   0 9,17 * * 1-5 - 9 AM and 5 PM on weekdays
# POLL_CRON=0 2 * * *

# Timezone for cron scheduling
TZ=UTC

# ----------------------------------------------------------------------------
# Storage Configuration
# ----------------------------------------------------------------------------
LOCAL_STORAGE_PATH=./data
TEMP_PATH=./temp
ZIP_BACKUP_PATH=./data/AutogenJobID/zipfile-backups

# ----------------------------------------------------------------------------
# Retention Configuration (0 = disabled)
# ----------------------------------------------------------------------------
CSV_RETENTION_DAYS=0
LOG_RETENTION_DAYS=0
ERROR_LOG_RETENTION_DAYS=0
PROCESSING_RECORDS_RETENTION_DAYS=0
ZIP_BACKUP_RETENTION_DAYS=0

# ----------------------------------------------------------------------------
# Type Folders Configuration
# ----------------------------------------------------------------------------
# Comma-separated list of type folders to scan on WebScribe FTPS
